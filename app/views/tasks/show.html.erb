<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= @task.title %></h2>
      <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
        <i class="fa fa-pencil"></i> Edit this task
      <% end %>
  </div>


  <p class="well"><%= @task.details %></p>

      <% if @task.completed %>
        <i class="fa fa-check-square-o"></i> C'est fait
      <% else %>
        <i class="fa fa-square-o"></i> c'est encore à faire
      <% end %>

    <br>
    <%= link_to "revenir aux tâches", tasks_path %>
    <br>
    <%= link_to "modifier une tâche", edit_task_path %>

</div>
